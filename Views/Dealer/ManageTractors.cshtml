@model List<SmartFarming.Models.ManageTractor>
@{
    ViewBag.Title = "ManageTractors";
    Layout = "~/Views/Shared/_TractorLayout.cshtml";
}

<div class="col-md-9">
    <div class="panel panel-default">
        <div class="panel-heading main-color-bg">
            <h4 class="panel-title">
                <span class="glyphicon glyphicon-th-list"></span>&nbsp;&nbsp;Manage Tractors
            </h4>
        </div>
        <div class="panel-body" style="margin-top:10px">
            <div class="container-fluid">
                <a href="@Url.Action("AddOrEditTractor", "Dealer",new { id = 0 })" class="btn btn-primary" style="float:right; margin-bottom:6px; font-weight:700;"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Add Tractor</a>
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th style="width:10%">Sr. No</th>
                            <th style="width:28%">Model Name</th>
                            <th style="width:15%">Warrenty</th>
                            <th style="width:15%">Status</th>
                            <th style="width:15%">Price</th>
                            <th style="width:17%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 1; i <= Model.Count; i++)
                        {
                        <tr>
                            <td>@i</td>
                            <td>@Model[i - 1].ModelName</td>
                            <td>@Model[i - 1].Warrenty Years</td>
                            <td>@Model[i - 1].Status</td>
                            <td>@Model[i - 1].Price</td>
                            <td>
                                <a href="@Url.Action("AddOrEditTractor", "Dealer",new { id = Model[i - 1].id })" class="btn btn-xs btn-primary"><span class="glyphicon glyphicon-edit"></span>&nbsp;&nbsp;Edit</a>
                                <a href="@Url.Action("DeleteTractor", "Dealer",new { id = Model[i - 1].id })" class="btn btn-xs btn-danger"><span class="glyphicon glyphicon-trash"></span>&nbsp;&nbsp;Delete</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

