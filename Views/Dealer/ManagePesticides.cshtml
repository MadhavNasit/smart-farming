@model List<SmartFarming.Models.ManagePesticides>
@{
    ViewBag.Title = "ManagePesticides";
    Layout = "~/Views/Shared/_DealerLayout.cshtml";
}

    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading main-color-bg">
                <h4 class="panel-title">
                    <span class="glyphicon glyphicon-th-list"></span>&nbsp;&nbsp;Manage Pesticide
                </h4>
            </div>
            <div class="panel-body" style="margin-top:10px">
                <div class="container-fluid">
                    <a href="@Url.Action("AddOrEditPesticide", "Dealer",new { id = 0 })" class="btn btn-primary" style="float:right; margin-bottom:6px; font-weight:700;"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Add Pesticide</a>
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width:8%">Sr. No</th>
                                <th style="width:20%">Pesticide</th>
                                <th style="width:20%">Pesticide Category</th>
                                <th style="width:20%">Crop</th>
                                <th style="width:15%">Price</th>
                                <th style="width:17%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 1; i <= Model.Count; i++)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@Model[i - 1].PesticideName</td>
                                    <td>@Model[i - 1].Category</td>
                                    <td>@Model[i - 1].CropName</td>
                                    <td>@Model[i - 1].Price</td>
                                    <td>
                                        <a href="@Url.Action("AddOrEditPesticide", "Dealer",new { id = Model[i - 1].id })" class="btn btn-xs btn-primary"><span class="glyphicon glyphicon-edit"></span>&nbsp;&nbsp;Edit</a>
                                        <a href="@Url.Action("DeletePesticide", "Dealer",new { id = Model[i - 1].id })" class="btn btn-xs btn-danger"><span class="glyphicon glyphicon-trash"></span>&nbsp;&nbsp;Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script>
    $(document).ready(function () {
        $('.manage-pesticides').addClass('active');
        $('.manage-seeds').removeClass('active');
        $('.manage-fertilizers').removeClass('active');
        $('.quatation').removeClass('active');
    });
    </script>
