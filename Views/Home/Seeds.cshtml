@model List<SmartFarming.Models.ManageSeeds>
@{
    ViewBag.Title = "Seeds";
    ViewBag.Image = "seeddetails-banner2.jpg";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

    <section style="padding-bottom:90px">
        <div class="container p-3" style="background-color: #fff; margin-top:-40px; border-radius: .5em;">

            <div class="row">
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <div class="col-md-3">
                            <div class="item">
                                <a href="@Url.Action("SeedDetail","Home", new { id = item.id})">
                                    <div class="card border-0 med-blog">
                                        <div class="card-header p-0">
                                            <img class="card-img-bottom" src="~/Images/@item.Image" alt="Card image cap">
                                        </div>
                                        <div class="card-body border border-top-0">
                                            <div class="mb-1">
                                                <h5 class="blog-title card-title m-0">
                                                    @item.SeedName
                                                </h5>
                                            </div>
                                            <div class="my-1"><b>Price :</b> @item.Price</div>
                                        </div>
                                    </div>
                                </a>

                            </div>
                        </div>

                    }
                }
            </div>
        </div>
    </section>

