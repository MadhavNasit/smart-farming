@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title|Smart Farming</title>
    <link rel="icon" href="@Url.Content("~/Images/farming-and-gardening.svg")" />
    @*<script src="~/Scripts/jquery-3.5.1.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/swiper.min.js"></script>
        <script src="~/Scripts/autoscroll.js"></script>
        <script src="~/Scripts/owl.carousel.js"></script>
        <script src="~/Scripts/jquery-ui.min.js"></script>*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/scripts")
    @Styles.Render("~/bundles/css")
</head>
<body>
    <div class="main-top" id="home">
        <!-- header -->
        <div class="container">
            <!-- nav -->
            <nav class="fixed-top nav-bottom-border bg-transperent">
                <div id="logo d-flex flex-row">
                    <img src="~/Images/logo-white.png" height="50px" />
                    <ul class="menu mt-2">
                        <li class="active"><a href="@Url.Action("Index","Home")">Home</a></li>
                        <li><a href="@Url.Action("Crops","Home")">Major Crops</a></li>
                        <li>
                            <!-- First Tier Drop Down -->
                            <label for="drop-2" class="toggle toogle-2">
                                Our Service <span class="fa fa-angle-down"
                                                  aria-hidden="true"></span>
                            </label>
                            <a href="#">Our Service <span class="fa fa-angle-down" aria-hidden="true"></span></a>
                            <input type="checkbox" id="drop-2">
                            <ul>
                                <li><a href="@Url.Action("Seeds","Home")" class="drop-text">Seeds</a></li>
                                <li><a href="@Url.Action("Pesticides","Home")" class="drop-text">Pesticides</a></li>
                                <li><a href="@Url.Action("Fertilizers","Home")" class="drop-text">Fertilizers</a></li>
                                <li><a href="@Url.Action("TractorCompare","Home")" class="drop-text">Compare Trctor</a></li>
                                <li><a href="@Url.Action("DailyPrice","Home")" class="drop-text">Daily Price</a></li>
                            </ul>
                        </li>
                        <li><a href="@Url.Action("AboutUs","Home")">About</a></li>
                        <li><a href="@Url.Action("News","Home")">Schemes</a></li>

                        <li><a href="@Url.Action("ContactUs","Home")">Contact Us</a></li>
                    </ul>
                </div>
                <label for="drop" class="toggle">Menu</label>
                <input type="checkbox" id="drop">

            </nav>
            <!-- //nav -->
        </div>
        <!-- //header -->
        <!-- banner -->

        <div class="main-banner text-center">
            <div class="swiper-container" style="margin:0px;">
                <div class="swiper-wrapper">
                    <div class="swiper-slide"
                         style="background: linear-gradient(0deg, rgba(0, 1, 1, 1) 0%, rgba(255,255,255,0) 100%),url(../../Images/banner6.jpg) no-repeat center;background-size: cover;">
                    </div>
                    <div class="swiper-slide"
                         style="background: linear-gradient(0deg, rgba(0, 1, 1, 1) 0%, rgba(255,255,255,0) 100%),url(../../Images/banner2.jpg) no-repeat center;background-size: cover;">
                    </div>
                    <div class="swiper-slide"
                         style="background: linear-gradient(0deg, rgba(0, 1, 1, 1) 0%, rgba(255,255,255,0) 100%),url(../../Images/banner4.jpg) no-repeat center;background-size: cover;">
                    </div>
                    <div class="swiper-slide"
                         style="background: linear-gradient(0deg, rgba(0, 1, 1, 1) 0%, rgba(255,255,255,0) 100%),url(../../Images/banner3.jpg) no-repeat center;background-size: cover;">
                    </div>
                    <div class="swiper-slide"
                         style="background: linear-gradient(0deg, rgba(0, 1, 1, 1) 0%, rgba(255,255,255,0) 100%),url(../../Images/banner5.jpg) no-repeat center;background-size: cover;">
                    </div>
                    <div class="swiper-slide"
                         style="background: linear-gradient(0deg, rgba(0, 1, 1, 1) 0%, rgba(255,255,255,0) 100%),url(../../Images/banner1.jpg) no-repeat center;background-size: cover;">
                    </div>
                </div>
            </div>
            <div class="container-fluid main-banner-body">
                <div class="style-banner">
                    <h1 class="mb-2">Welcome to Smart Farming</h1>
                    <h3>
                        Offering Farming Solutions Worldwide
                    </h3>
                </div>
                @Html.ActionLink("About US", "AboutUs", "Home", new {@class = "btn theme-btn my-4", style = "border: none;" })
            </div>
        </div>
    </div>
    @RenderBody()
    <footer>
        <div class="container">
            <div class="footer-div">
                <img src="~/Images/logo-white.png" height="50px" />
                <div>
                    @Html.ActionLink("About US", "AboutUs", "Home", new { @class = "mx-2"})
                    @Html.ActionLink("Contact US", "ContactUs", "Home", new { @class = "mx-2"})
                </div>
            </div>
        </div>
    </footer>
    <script>
        $(function () {
            var navbar = $('nav');

            $(window).scroll(function () {
                if ($(window).scrollTop() <= 0) {
                    navbar.removeClass('bg-white');
                    navbar.addClass('bg-transperent');
                    $('nav img').attr("src", "../Images/logo-white.png");
                } else {
                    navbar.removeClass('bg-transperent');
                    navbar.addClass('bg-white');
                    $('nav img').attr("src", "../Images/logo_transperent2.png");
                }
            });
        });
    </script>
</body>
</html>
